{
  "name": "eurorails_ai",
  "version": "1.0.0",
  "description": "AI-powered EuroRails game",
  "main": "dist/server/index.js",
  "scripts": {
    "build:server": "tsc -p tsconfig.json",
    "build:client": "webpack --mode production",
    "build": "npm run build:server && npm run build:client",
    "start": "npm run build && node dist/server/index.js",
    "dev:client": "webpack serve --mode development",
    "dev:server": "ts-node-dev --respawn --transpile-only src/server/index.ts",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^8.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "fastify": "^4.0.0",
    "pg": "^8.7.0",
    "phaser": "^3.55.2",
    "socket.io": "^4.5.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/node": "^16.0.0",
    "@types/pg": "^8.6.0",
    "@types/socket.io": "^3.0.0",
    "@types/uuid": "^10.0.0",
    "concurrently": "^7.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.2.0",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.7.0"
  }
}
