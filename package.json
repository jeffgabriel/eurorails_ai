{
  "name": "eurorails_ai",
  "version": "1.0.0",
  "type": "module",
  "description": "A digital implementation of the Eurorails board game",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "node dist/server/index.js",
    "dev:client": "webpack serve --mode development",
    "dev:server": "node --watch -r ts-node/register src/server/index.ts",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:client": "webpack --mode production",
    "build:server": "tsc -p tsconfig.json",
    "build": "npm run build:server && npm run build:client",
    "db:init": "ts-node src/server/db/init.ts",
    "setup": "npm install && npm run db:init",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "game",
    "board-game",
    "eurorails"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^8.0.0",
    "dotenv": "^16.0.0",
    "fastify": "^4.0.0",
    "pg": "^8.7.0",
    "phaser": "^3.55.2",
    "socket.io": "^4.5.0",
    "typescript": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "@types/pg": "^8.6.0",
    "@types/socket.io": "^3.0.0",
    "concurrently": "^7.0.0",
    "html-webpack-plugin": "^5.5.0",
    "ts-loader": "^9.2.0",
    "ts-node": "^10.4.0",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.7.0"
  }
}
