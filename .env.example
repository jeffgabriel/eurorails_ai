# Database Configuration
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eurorails
DB_SSL=false
DB_MAX_CONNECTIONS=10
DB_IDLE_TIMEOUT=30000
MIGRATIONS_DIR=db/migrations

# Server Configuration
PORT=3001
SERVER_DOCKER_PORT=8080
NODE_ENV=development
ENABLE_DEBUG_ROUTES=true
CLEAN_DB_ON_START=false

# Security
SESSION_SECRET=your_session_secret_here_generate_with_crypto_random_bytes

# Email Configuration
# IMPORTANT: RESEND_API_KEY is OPTIONAL for deployment
# - If not set: App will start but email verification will not work
# - If set: Email verification will be fully functional
# For production: Get API key from https://resend.com
RESEND_API_KEY=your_resend_api_key_here
EMAIL_FROM=noreply@eurorails.com

# Email Service Selection (use MailDev for development)
# For production: Set RESEND_API_KEY and NODE_ENV=production
# For development: Run `docker-compose up maildev` and use NODE_ENV=development
MAILDEV_SMTP_HOST=localhost
MAILDEV_SMTP_PORT=1025
MAILDEV_WEB_PORT=1080

# URL Configuration
# IMPORTANT: API_BASE_URL is for email verification links (must point to backend API)
# CLIENT_URL is for CORS and post-verification redirects (points to frontend)
API_BASE_URL=http://localhost:3001
CLIENT_URL=http://localhost:3000

# Content Moderation (Llama Guard via Ollama)
# Local (native Ollama):    http://localhost:11434
# Docker Compose:           http://ollama:11434  (set automatically)
# Railway production:       http://ollama.railway.internal:11434
LLAMA_GUARD_URL=http://localhost:11434
LLAMA_GUARD_MODEL=llama-guard3:1b

# Optional: CORS Configuration (comma-separated list of allowed origins)
# ALLOWED_ORIGINS=http://localhost:3000,https://eurorails.com
